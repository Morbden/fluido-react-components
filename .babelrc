{
  "ignore": ["**/*.d.ts", "**/*.test.ts", "**/*.test.tsx"],
  "sourceMaps": true,
  "presets": [
    ["@babel/env", { "modules": "commonjs" }],
    "@babel/preset-react",
    [
      "@babel/preset-typescript",
      {
        "allowDeclareFields": true
      }
    ]
  ],
  "plugins": [
    "@babel/proposal-class-properties",
    "@babel/proposal-object-rest-spread",
    [
      "styled-components",
      {
        "ssr": true,
        "displayName": true,
        "preprocess": false
      }
    ]
  ]
}
